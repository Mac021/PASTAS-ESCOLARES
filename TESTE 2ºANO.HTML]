function funcmodelo()
{
var preco=window.document.f1.preco;
var modelo=window.document.f1.modelo;
for(I=0;I<=10;I++)
{
preco.remove(0)
}
if((modelo=="Prisma")||(modelo=="Fiesta")||(modelo=="Voyage"))
{
window.document.f1.preco.value="40.000,00";
}
if((modelo=="Onix")||(modelo=="Argo")||(modelo="Gol"))
{
window.document.f1.preco.value="35.000,00";
}
if(modelo=="Cruse")
{
window.document.f1.preco.value="75.000,00";
}
if(modelo=="KA")
{
window.document.f1.preco.value="30.000,00";
}
/*if(modelo=="Fiesta")
{
window.document.f1.preco.value="40.000,00";
}*/
if(modelo=="Focus")
{
window.document.f1.preco.value="80.000,00";
}
if(modelo=="Chronos")
{
window.document.f1.preco.value="50.000,00";
}
/*if(modelo=="Argo")
{
window.document.f1.preco.value="35.000,00";
}*/
if(modelo=="Toro")
{
window.document.f1.preco.value="60.000,00";
}
if(modelo=="Virtus")
{
window.document.f1.preco.value="65.000,00";
}
/*if(modelo=="Gol")
{
window.document.f1.preco.value="35.000,00";
}*/
